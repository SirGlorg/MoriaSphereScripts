[function premena]
if (src.profession==class_mag)
body=c_dragon_red
src.STR=(<SRC.STR> + 100)
src.DEX=(<SRC.DEX> + 50)
src.INT=(<SRC.INT> - 50)
sfx snd_SPELL_lightning
elseif (src.profession==class_necro)
body=C_liche
STR=(<SRC.STR> + 100)
DEX=(<SRC.DEX> + 50)
INT=(<SRC.INT> - 50)
sfx snd_SPELL_lightning
endif

[function premena_zpet]
sfx snd_SPELL_lightning
src.STR=(<SRC.STR> - 100)
src.DEX=(<SRC.DEX> - 50)
src.INT=(<SRC.INT> + 50)
src.mana=0
src.stamina=1
src.body=<src.obody>


