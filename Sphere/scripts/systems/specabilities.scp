// voodoo oslabeni

[function oslabenivoodoo]
if !(src.profession==class_shaman)
	src.redmessage("Tohle neni pro tebe!")
	return 0
endif
if (src.tag(ra_woodoo) == 0)
	src.sysmessage("Tohle jeste nedokazes.")
	return 0
endif
if !(src.RESTEST(i_GEM_RUBY))
	src.sysmessage("Nemas vsetko potrebne, abys tohle dokazal.")
  return 0
endif
src.newequip(i_target_voodooenticement)
src.sysmessage("Zamer obludu, kteru chces oslabit.")
	
[itemdef i_target_voodooenticement]
id=i_memory
type=t_eq_script
name=i_target_voodooenticement

on=@timer
remove
return 0

on=@equip
target()
timer=15

on=@targon_char
if (src.targ.isplayer)
  src.redmessage("Zameriavaj iba obludy")
  return 0
else
	if (src.targ.tag(resist_cold) == 1000)
		src.sysmessage("Obluda je odolna na tvoje voodoo")
	else
		if !(src.targ.restest(i_voodoo_enticement)>)
			if (src.RESTEST(i_GEM_RUBY))
				src.consume(i_GEM_RUBY)
				src.targ.newequip(i_voodoo_enticement)
				lastnew.tag(player,<src>)
				lastnew.tag(chance,<src.tag(ra_woodoo_curse)>)
			else
				src.sysmessage("Nemas vsetko potrebne, abys tohle dokazal.")
			endif
		else
			src.sysmessage("Obluda uz je oslabena")
		endif
	endif
endif
return 1

on=@targon_item
src.redmessage("Zameriavaj iba obludy")
return 0

on=@targon_ground
src.redmessage("Zameriavaj iba obludy")
return 0

[itemdef i_voodoo_enticement]
id=i_memory
name=voodoo oslabeni
type=t_eq_script

on=@equip
tag(weaker,0)
timer 2

on=@timer
if (tag(weaker) == 0)
	if (tag(chance) > 10)
		arg(chance,10)
	else
		arg(chance,<tag(chance)>)
	endif
  if (chance(<eval <arg(chance)>*10>,2))
		tag(old_resist,<cont.tag(resist_cold)>)
		if (<tag(old_resist)> > 0)
			arg(new_resist,<eval <tag(old_resist)>-<eval <eval <tag(old_resist)>*5*<tag(chance)>>/1000>>)
		else
			arg(new_resist,<tag(old_resist)>)
		endif
		cont.tag(resist_cold,<arg(new_resist)>)
		tag(weaker,1)
		tag(player).sysmessage("Oslabeni uspesne")
		timer=<eval 20+<eval 2*<tag(chance)>>>
		cont.newmemory(<tag(player)>)
    cont.act.color=memory_harmedby|MEMORY_WAR_TARG|MEMORY_FIGHT|MEMORY_SPEAK
    cont.act=<arg(peacestoreact)>  
	else
		tag(player).sysmessage("Oslabeni se nepovedlo")
		remove
	endif
elseif (tag(weaker) == 1)
	cont.tag(resist_cold,<tag(old_resist)>)
	remove
	return 0
endif
return 1


