[function lifepact]
if (flag_dead)
  if (<findid(i_soul)>)
    if (<eval(<serv.time>-<findid(i_soul).tag(created)>)> < 200 ) //moze pouzit po 20 sekundach od vytvorenia duse
      sysmessage("Tva duse je jeste prilis neklidna")
    else
      arg(statstimer,<findid(i_checkstats_timer)>)
      if (arg(statstimer))
        if (arg(statstimer).timer>295) && !(<hval region.tag(cFlags)>&<region_cf_instantRes>)  //tj uplynulo mene nez 5 sekund od smrti
          sysMessage("Na oziveni jeste nejsi <sex(pripraven,pripravena)>.")
          var(spellpower,0)
          return 1
        endif
      endif
      spelleffect(59,1000)
      hits=<eval((<maxhits>*10)/100)>//10%
      mana=<eval((<maxmana>*10)/100)>
      stam=<eval((<maxstam>*10)/100)>
      arg(stats,<eval(<tag(lifepact_by).tag(ra_woodoo_lifepact_stats)>)>)
      if (<arg(stats)>>0)
        hits=<hits>+<eval((<maxhits>*(9*<arg(stats)>))/100)>//10% + abilita*9% => max 100% pri 10 bodoch
        mana=<mana>+<eval((<maxmana>*(9*<arg(stats)>))/100)>
        stam=<stam>+<eval((<maxstam>*(9*<arg(stats)>))/100)>
      endif
      findid(i_soul).remove
      findid(i_soul_remover).timer=1
      return 1
    endif
  else
    sysmessage("Nemas u sebe dusi.")
    return 1
  endif
else
  if (profession!=class_shaman)
    sysmessage("Nic se nestalo.")
  else
    if (ishungrymsg)
      return 1
    endif
    if (findid(i_soul_case))
      arg(min_stam,<eval(60-<tag(ra_woodoo_lifepact)>)>)
      arg(min_mana,<eval(70-<tag(ra_woodoo_lifepact)>)>)
      if ((<tag(nextlifepact)>)>(<serv.time>))
        arg(againMinutes,<eval (<tag(nextlifepact)>-<serv.time>)/600>)
        arg(againSeconds,<eval ((<tag(nextlifepact)>-<serv.time>)-<arg(againMinutes)>*600)/10>)
        classMessage("Muzes pouzit az za <?arg(againMinutes)?>  minut, <?arg(againSeconds)?> sekund.")
        return 1
      elseif ((stam<<arg(min_stam)>)||(mana<<arg(min_mana)>))
        classMessage("Nemas dost sil.")
        return 1 
      else
      	if (chance(<tag(ra_woodoo_pacts)>,1))
        //if ( (<eval(tag.ra_woodoo_pacts)>*45) > <rand(1001)> ) // oprava
          newEquip(i_lifepact_target)
        else
          sysmessage("Nepovedlo se.")
          tag(nextlifepact,<serv.time>+<nastaveni_lifepact_fail>*600)
        endif
      endif
    else
      sysmessage("Nemas zadnou schranku na duse.")
      return 1
    endif
  endif
endif
return 1

