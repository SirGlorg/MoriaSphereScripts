[function CountArmorByMaterial]  //spocte obranu dle materialu armoru (verite, valorite) bez ohledu na jeho typ (plate/studded) -> nepocita se krk (kvuli znevyhodneni bone)
//layers and influence:
//shield 2 - 1
//legs 4 - 3
//helm 6 - 2
//gloves 7 - 1
//chest 13 - 3
//arms 19 - 2
//-------------
//copper: 12
//iron: 24
// silver + gold ...
//verite: 60
//valorite: 72
//obsidian: 84
//adamantinum: 96
//mithril: 108
// ----- no shield -----
//copper: 11
//iron: 22
// silver + gold ...
//verite: 55
//valorite: 66
//obsidian: 77
//adamantimum: 88
//mithrill: 99


arg(countedArmor,0)
if (<findlayer(2)>)
  if (findlayer(2).type==t_shield)
    arg(countedArmor,#+<findlayer(2).typedef.tdata1>)
  endif
endif
if (<findlayer(4)>)
  if (findlayer(4).type==t_armor) || (findlayer(4).type==t_armor_leather)
    arg(countedArmor,#+(3*<findlayer(4).typedef.tdata1>))
  endif
endif
if (<findlayer(6)>)
  if (findlayer(6).type==t_armor) || (findlayer(6).type==t_armor_leather)
    arg(countedArmor,#+(2*<findlayer(6).typedef.tdata1>))
  endif
endif
if (<findlayer(7)>)
  if (findlayer(7).type==t_armor) || (findlayer(7).type==t_armor_leather)
    arg(countedArmor,#+<findlayer(7).typedef.tdata1>)
  endif
endif
if (<findlayer(13)>)
  if (findlayer(13).type==t_armor) || (findlayer(13).type==t_armor_leather)
    arg(countedArmor,#+(3*<findlayer(13).typedef.tdata1>))
  endif
endif
if (<findlayer(19)>)
  if (findlayer(19).type==t_armor) || (findlayer(19).type==t_armor_leather)
    arg(countedArmor,#+(2*<findlayer(19).typedef.tdata1>))
  endif
endif
return<arg(countedArmor)>


