[function voodooobet]
if (<flags>&statf_dead)
 return 1
endif
if !(profession==class_shaman)
	sysmessage("Tohle neni pro tebe")
	return 1
endif
if (tag(ra_woodoo))
	if (<tag(ra_woodoo)> > 0)
		if (<tag(ra_woodoo)> > 9) 
			arg(woodoo,10)
			if (tag(ra_woodoo_obet))
				arg(woodoo,<arg(woodoo)>+<tag(ra_woodoo_obet)>)
			endif
		else
			arg(woodoo,<tag(ra_woodoo)>)
		endif
		woodootakehp(40)
		if (chance(<arg(woodoo)>,1))
		  woodooaddmana(<eval 10+<eval 3*<arg(woodoo)>>>)
		else
			sysmessage("Au! Poranil jsi se a skazil ritual")
		endif
    sfx=01a0
    src.EFFECT=3,i_fx_glow_spike,0,20,10
	else
		sysmessage("Nejsi dost dobry saman")
	endif
else
	sysmessage("Nejsi dost dobry saman")
endif

[function woodootakehp]
if (<hits> < <argv>)
	hits = 0
else
	hits = <hits>-<args>
endif

[function woodooaddmana]
if (<maxmana> < <eval <mana>+<args>>)
	mana = <maxmana>
else
	mana = <mana>+<args>
endif

